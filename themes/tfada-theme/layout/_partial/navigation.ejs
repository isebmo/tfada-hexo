
<nav id="main-nav" class="max-width">
        <a href="<%= config.url %>">
            <img src="/images<%= theme.logo.url %>" alt="<%= theme.logo.alt %>" height="70px" width="70px">
        </a>
        <ul class="unstyled">

        <% 
        if (site.categories && site.categories.length){
            site.categories.forEach(function(category){
                if (!category.parent && config.categories_to_show.indexOf(category.name) > -1) {
                    var classActive = path.indexOf(category.name) > -1 ? 'active' : '';
                    %>
                        <%- '<li class="' + classActive +'"><a class="'+category.name.toLowerCase()+'" href="' + config.root + category.path + '">' + category.name + '</a></li>' %>
                    <%
                }
            });
        } 
        %>
        </ul>
</nav>
        
